<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:padding="10dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                tools:ignore="UseCompoundDrawables">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_12sdp"
                    android:ems="12"
                    android:textStyle="bold"
                    tools:text="@string/_1_espresso_quantity" />
                <TextView
                    android:id="@+id/et_es_q"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:gravity="bottom"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_12sdp"
                    android:text="@string/_0"
                    android:ems="1"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:textSize="@dimen/_12sdp"
                    android:ems="2"
                    android:textStyle="bold"
                    tools:text="size" />
                <TextView
                    android:id="@+id/et_es_si"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:gravity="bottom"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_12sdp"
                    android:ems="3"
                    android:textStyle="bold"
                    tools:text="small" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                tools:ignore="UseCompoundDrawables">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_12sdp"
                    android:ems="12"
                    android:textStyle="bold"
                    tools:text="@string/_1_cap_quantity" />
                <TextView
                    android:id="@+id/et_ca_q"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:gravity="bottom"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_12sdp"
                    android:ems="1"
                    android:textStyle="bold"
                    tools:text="@string/_0" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:textSize="@dimen/_12sdp"
                    android:ems="2"
                    android:textStyle="bold"
                    tools:text="size" />
                <TextView
                    android:id="@+id/et_ca_si"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:gravity="bottom"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_12sdp"
                    android:ems="3"
                    android:textStyle="bold"
                    tools:text="small" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                tools:ignore="UseCompoundDrawables">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_12sdp"
                    android:ems="12"
                    android:textStyle="bold"
                    tools:text="@string/_1_late_quantity" />
                <TextView
                    android:id="@+id/et_la_q"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:gravity="bottom"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_12sdp"
                    android:ems="1"
                    android:textStyle="bold"
                    tools:text="@string/_0" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:textSize="@dimen/_12sdp"
                    android:ems="2"
                    android:textStyle="bold"
                    tools:text="size" />
                <TextView
                    android:id="@+id/et_la_si"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:gravity="bottom"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_12sdp"
                    android:ems="3"
                    android:textStyle="bold"
                    tools:text="small" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                tools:ignore="UseCompoundDrawables">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_12sdp"
                    android:ems="12"
                    android:textStyle="bold"
                    tools:text="@string/_1_frape_quantity" />
                <TextView
                    android:id="@+id/et_fa_q"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:gravity="bottom"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_12sdp"
                    android:ems="1"
                    android:textStyle="bold"
                    tools:text="@string/_0" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:textSize="@dimen/_12sdp"
                    android:ems="2"
                    android:textStyle="bold"
                    tools:text="size" />
                <TextView
                    android:id="@+id/et_fa_si"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:gravity="bottom"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_12sdp"
                    android:ems="3"
                    android:textStyle="bold"
                    tools:text="small" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                tools:ignore="UseCompoundDrawables">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_12sdp"
                    android:ems="7"
                    android:textStyle="bold"
                    tools:text="@string/note" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                tools:ignore="UseCompoundDrawables">

                <TextView
                    android:id="@+id/note"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:gravity="bottom"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_12sdp"
                    android:maxLines="4"
                    android:textStyle="bold"
                    tools:text="Nothing now" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                tools:ignore="UseCompoundDrawables">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_12sdp"
                    android:ems="2"
                    android:textStyle="bold"
                    tools:text="@string/date" />
                <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:gravity="bottom"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_12sdp"
                    android:ems="6"
                    android:textStyle="bold"
                    tools:text="0" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:textSize="@dimen/_12sdp"
                    android:ems="3"
                    android:textStyle="bold"
                    tools:text="@string/total" />
                <TextView
                    android:id="@+id/amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:gravity="bottom"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_12sdp"
                    android:ems="4"
                    android:textStyle="bold"
                    tools:text="0" />
            </LinearLayout>

        </LinearLayout>


    </androidx.cardview.widget.CardView>
</LinearLayout>